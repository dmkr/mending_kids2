<%= form_for @donation, :html => { :class => 'form-horizontal form-model' } do |f| %>
<div class="form-group">
    <%= f.label :category, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%if !@tempDonations.nil? %>
      <%= f.select :category,options_for_select(["General OR supplies","Anesthesia supplies","Medications","Sutures", "ENT", "Ortho","Urology", "Neuro","Plastics", "Ophthalmic", "Cardiac", "Interventional cardiology", "GI", "Vascular", "ARM"], @tempDonations.category),:class => 'text-field form-control' %>
      <%else%>
      <%= f.select :category,options_for_select(["General OR supplies","Anesthesia supplies","Medications","Sutures", "ENT", "Ortho","Urology", "Neuro","Plastics", "Ophthalmic", "Cardiac", "Interventional cardiology", "GI", "Vascular", "ARM"]),:class => 'text-field form-control' %>
      <%end%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :item_description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :item_description, :class => 'text-field form-control' %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :donor_id, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <!--:author_id, Author.all, :id, :name_with_initial, prompt: true-->
        <%= f.collection_select( :donor_id, Donor.all, :id, :first_name,  prompt: true) %>
      </div>
    </div>

  <div class="form-group">
    <%= f.label :brand, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :brand, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lot_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :lot_number, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :expiration_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%if !@tempDonations.nil? and !@tempDonations.expiration_date.nil?%>
      <%= f.date_select :expiration_date, :class => 'text-field form-control', default: {day: @tempDonations.expiration_date.day, month:@tempDonations.expiration_date.month, year:@tempDonations.expiration_date.year} %>
      <%else%>

       <%= f.date_select :expiration_date, :class => 'text-field form-control' %>
      <%end%>
      <% if !@tempDonations.nil? and @tempDonations.expiration_date.nil?%>
      <%=check_box_tag "checker" , "1", true%>
      <%else%>
      <%=check_box_tag "checker"%>
      <%end%>
    </div>
   
  </div>
  <div class="form-group">
    <%= f.label :fair_market_value, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :fair_market_value, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mk_cost, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :mk_cost, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_in_kind_value, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :total_in_kind_value, :class => 'text-field form-control' %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :ref, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ref, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :quantity, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :quantity, :class => 'text-field form-control' %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label "Unit of measurement", :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :uom, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :location, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country_of_origin, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :country_of_origin, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :details, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :details, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comments, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :comments, :class => 'text-field form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  donations_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
